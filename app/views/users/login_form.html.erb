
<div class="user-login">
  <p>Need to create an account? <%= link_to "Click Here to create an account", new_user_path %></p>
  <h2>User login</h2>

  <div id="google-oauth">
      <a  href="/auth/google_oauth2" id="g-oauth-link">
        <button type="button" class="btn btn-md" id="g-oauth-button">
          <img  alt="Google sign-in" src="https://logos-world.net/wp-content/uploads/2020/09/Google-Symbol.png" />
          Sign in with Google
          </button>
      </a>
    <p> Or enter your details: </p>
  </div>

  <%= form_with(url: users_login_path, method: :post, id: "user-login-form", local: true) do |form| %>
    <%= form.label :username, "Username" %>
    <%= form.text_field :username, placeholder: "Enter your username" %>
    <br />
    <%= form.label :password, "Password" %>
    <%= form.password_field :password, placeholder: "Enter your password" %>
    <br />
    <%= form.submit "Login" %>
  <% end %>
</div>