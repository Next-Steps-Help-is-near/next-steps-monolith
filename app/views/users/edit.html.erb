<h2>Update password</h2>
<%= form_with model: @user, method: :patch, local: true do |form| %>
  <%= form.label :new_password %>
  <%= form.textarea :new_password, placeholder: "Enter new password" %>

  <%= form.label :password_verify %>
  <%= form.textarea :password_verify, placeholder: "Confirm new password" %>

  <%= form.submit "Update password" %>
<% end %>